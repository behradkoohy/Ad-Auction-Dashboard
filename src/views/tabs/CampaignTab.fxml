<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXTextField?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.CampaignTabController" >
    <children>
        <VBox prefHeight="555.0" prefWidth="699.0">
            <children>
                <FlowPane prefHeight="38.0" prefWidth="384.0">
                    <children>
                        <JFXComboBox fx:id="campaignChooser" prefHeight="27.0" prefWidth="312.0" promptText="Load Previous Campaign">
                            <FlowPane.margin>
                                <Insets left="20.0" />
                            </FlowPane.margin>
                        </JFXComboBox>
                        <JFXButton onAction="#loadSelectedCampaign" style="-fx-background-color: #9575cd#9575cd #9575cd#9575cd;" text="LOAD  CAMPAIGN" textFill="WHITE">
                            <FlowPane.margin>
                                <Insets left="30.0" />
                            </FlowPane.margin>
                        </JFXButton>
                    </children>
                    <VBox.margin>
                        <Insets left="30.0" top="30.0" />
                    </VBox.margin>
                </FlowPane>
                <Label text="Create new Campaign from CSV files:" underline="true">
                    <VBox.margin>
                        <Insets left="50.0" top="30.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <FlowPane>
                    <VBox.margin>
                        <Insets left="50.0" top="30.0" />
                    </VBox.margin>
                    <children>
                        <Label text="Campaign Name:" />
                        <JFXTextField fx:id="campaignName" prefHeight="27.0" prefWidth="319.0">
                            <FlowPane.margin>
                                <Insets left="20.0" />
                            </FlowPane.margin>
                        </JFXTextField>
                    </children>
                </FlowPane>
                <GridPane prefHeight="90.0" prefWidth="501.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="191.0" minWidth="10.0" prefWidth="155.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="244.0" minWidth="10.0" prefWidth="187.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="274.0" minWidth="10.0" prefWidth="246.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <VBox.margin>
                        <Insets left="10.0" right="100.0" top="40.0" />
                    </VBox.margin>
                    <children>
                        <Label fx:id="clickLabel" text="No file selected" GridPane.columnIndex="2" />
                        <Label fx:id="serverLabel" text="No file selected" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Label fx:id="impressionLabel" text="No file selected" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <JFXButton onAction="#chooseClick" prefHeight="27.0" prefWidth="160.0" style="-fx-background-color: #e0e0e0#e0e0e0 #e0e0e0#e0e0e0;" text="Choose file" GridPane.columnIndex="1" />
                        <JFXButton onAction="#chooseServer" prefHeight="27.0" prefWidth="160.0" style="-fx-background-color: #e0e0e0#e0e0e0 #e0e0e0#e0e0e0;" text="Choose file" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <JFXButton onAction="#chooseImpression" prefHeight="27.0" prefWidth="160.0" style="-fx-background-color: #e0e0e0#e0e0e0 #e0e0e0#e0e0e0;" text="Choose file" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="116.0" text="Impression log:" GridPane.rowIndex="2" />
                        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="114.0" text="Server log:" GridPane.rowIndex="1" />
                        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="115.0" text="Click log:" />
                    </children>
                </GridPane>
                    <JFXButton fx:id="loadNewCampaign" onAction="#loadNewCampaign" style="-fx-background-color: #9575cd#9575cd #9575cd#9575cd;" text="CREATE CAMPAIGN" textFill="WHITE">
                        <VBox.margin>
                            <Insets left="60.0" top="40.0" />
                        </VBox.margin>
                    </JFXButton>
            </children>
        </VBox>
    </children>
</AnchorPane>
